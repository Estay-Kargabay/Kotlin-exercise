<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_pricce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="160dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="percent (0%)"
        app:layout_constraintStart_toStartOf="@+id/editText_pricce"
        app:layout_constraintTop_toBottomOf="@+id/editText_pricce" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="All  result :"
        app:layout_constraintEnd_toEndOf="@+id/textView_percent"
        app:layout_constraintStart_toStartOf="@+id/textView_percent"
        app:layout_constraintTop_toBottomOf="@+id/textView_percent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView_dicount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$0.00"
        app:layout_constraintEnd_toEndOf="@+id/editText_pricce"
        app:layout_constraintTop_toBottomOf="@+id/editText_pricce"
        tools:ignore="DuplicateIds" />

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$0.00"
        app:layout_constraintEnd_toEndOf="@+id/textView_dicount"
        app:layout_constraintStart_toStartOf="@+id/textView_dicount"
        app:layout_constraintTop_toBottomOf="@+id/textView_dicount" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:max="100"
        android:min="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_pricce" />

</androidx.constraintlayout.widget.ConstraintLayout>